<p id="notice"><%= notice %></p>

<% content_for :query do %>
  <h1>Listing Hofs</h1>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= sort_link @search, :name, "Name" %></th>
      <th><%= sort_link @search, :year, "Year" %></th>
      <th><%= sort_link @search, :category, "Category" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hofs.each do |hof| %>
      <tr>
        <td><%= hof.name %></td>
        <td><%= hof.year %></td>
        <td><%= hof.category %></td>
      </tr>
    <% end %>
  </tbody>
</table>